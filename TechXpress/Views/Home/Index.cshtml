<!-- Hero Section -->
<div class="mb-12">
    <div class="relative rounded-2xl overflow-hidden h-[400px]">
        <img src="~/image/photo-1661961110372-8a7682543120.jpg" alt="Tech Banner" class="w-full h-full object-cover">
